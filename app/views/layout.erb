    <div class="home-page-block">
      <div class="logo">
          <h1>Class Tech</h1>
      </div>
      <div class="nav">
        <% if logged_in? %>
          <a href="/users">View your profile</a>
          <a href="/grades">View by Grade</a>
          <a href='/users/logout'>Logout</a>
        <%end%>
    </div> <!-- end nav -->
